<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!--Definizione della tabella -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/quantita" />

            <EditText
                android:id="@+id/quantita"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/valuta" />

            <!-- I radio-button sono allâ€™interno di un radio-group -->
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/dollaroStatunitense"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/dollaroStatunitense" />

                <RadioButton
                    android:id="@+id/sterlinaBritannica"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/sterlinaBritannica" />

                <RadioButton
                    android:id="@+id/francoSvizzero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/francoSvizzero" />

                <RadioButton
                    android:id="@+id/yenGiapponese"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/yenGiapponese" />
            </RadioGroup>

        </TableRow>
    </TableLayout>

    <!-- Layout orizzontale per i pulsanti -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/convertiDaEuro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@string/convertiDaEuro" />

        <Button
            android:id="@+id/convertiInEuro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/convertiInEuro" />
    </LinearLayout>

    <EditText
        android:id="@+id/resultField"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:gravity="center_vertical"
        android:hint="Risultato convertito" />

</LinearLayout>
